extends layout

block content
  .row.page-header
    .col-lg-12
      h1 Login
  .row
    .col-xs-12.col-md-6
      form.form-horizontal(action="", method="post", role="form")
        - if (error == "val")
          .alert.alert-danger(role="alert") All fields required, please try again
        - if (error == "user")
          .alert.alert-danger(role="alert") Incorrect Email, please try again
        - if (error == "pas")
          .alert.alert-danger(role="alert") Incorrect Password, please try again
        .form-group
          label.col-xs-10.col-sm-2.control-label(for="Email") Email:
          .col-xs-12.col-sm-10
            input#name.form-control(name="email")
        .form-group
          label.col-xs-10.col-sm-2.control-label(for="password") Password:
          .col-xs-12.col-sm-10
            input#name.form-control(type="password", name="password")
        .row.submit
            button.btn.btn-default.pull-right Login
          .col-xs-12.col-md-4
