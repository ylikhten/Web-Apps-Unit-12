extends layout

block content
  .row.page-header
    .col-lg-12
      h1 #{head}
  .row
    .col-xs-12.col-md-6
      form.form-horizontal(action="", method="post", role="form")
        - if (err == "val")
          .alert.alert-danger(role="alert") All fields required, please try again
        .form-group
          label.col-xs-10.col-sm-2.control-label(for="title") Book Title:
          .col-xs-12.col-sm-10
            input#name.form-control(name="title" value="#{listing.title}")
        .form-group
          label.col-xs-10.col-sm-2.control-label(for="subject") Book Subject:
          .col-xs-12.col-sm-2
            select#subject.form-control.input-sm(name="subject" value="#{listing.subject}")
              option(hidden value="") Select
              each item in options
                option(selected=(listing.subject==item)) #{item}
        .form-group
          label.col-xs-10.col-sm-2.control-label(for="description") Book Description:
          .col-xs-12.col-sm-10
            textarea#name.form-control(name="description") #{listing.description}
        .form-group
          label.col-xs-10.col-sm-2.control-label(for="trades") Items you are willing to trade for:
          .col-xs-12.col-sm-10
            textarea#name.form-control(name="trades") #{listing.trades}
        .row.submit
            button.btn.btn-default.pull-right #{b_text}
          .col-xs-12.col-md-4
